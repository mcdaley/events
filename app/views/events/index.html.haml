-# app/views/events/index.html.haml
-# ----------------------------------------------------------------------------
%div.row
  %div.col-xs-2.col-sm-2.col-md-2.col-lg-2
    %h4 Filter Events
    - @organizations.each do |org|
      %h6.org-link= link_to "#{org.name} (#{org.domain})", events_path( {org: org} )
      %ul.host-list
        - org.hosts.each do |host|
          %li.host-link= link_to host.name, events_path( {hostname: host} )
  
  %div.col-xs-10.col-sm-10.col-md-10.col-lg-10
    %h4= @source
    %table.table.table-striped
      %thead
        %tr
          %td Host
          %td Organization
          %td Message
          %td Timestampe
      %tbody
      - @events.each do |e|
        %tr
          %td= e.host.name
          %td= e.host.organization.domain
          %td= e.message
          %td= e.timestamp